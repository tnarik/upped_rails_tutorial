<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, onkeypress: "return taLimit(this)", 
      onkeyup: "taCount(this, 'micropostCounter')",
      placeholder: "Compose new micropost..." %>
  </div>
  <div>characters: <strong id="micropostCounter">140</strong></div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>