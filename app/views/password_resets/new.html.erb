<% provide(:title, 'Password reset') %>
<h1>Password reset request</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_tag password_resets_path do %>

      <%= label_tag :email %>
      <%= text_field_tag :email %>

      <%= submit_tag "Request reset", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>